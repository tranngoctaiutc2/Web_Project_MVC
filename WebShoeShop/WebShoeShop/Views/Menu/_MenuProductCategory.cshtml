@model IEnumerable<WebShoeShop.Models.EF.ProductCategory>
<style>
    .b_item .item_cate {
        box-shadow: 0px 0px 5px 0px #b9b3b3;
        border-radius: 10px;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        transition: transform 0.3s ease, filter 0.3s ease, box-shadow 0.3s ease;
        width: 250px;
        height: 220px;
        margin: 10px;
        position: relative;
    }

        .b_item .item_cate:hover {
            transform: scale(1.1);
            filter: brightness(80%);
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.5);
        }

    .b_item .b_img {
        width: 100%;
        height: 150px;
        border-radius: 20px;
        overflow: hidden;
        position: relative;
    }

        .b_item .b_img .bg_fade {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.3);
       /*     opacity: 0;*/
            transition: opacity 0.3s ease;
        }

        .b_item .b_img:hover .bg_fade {
            opacity: 1;
        }


    .b_item .tit {
        font-size: 16px;
        line-height: 20px;
        color: #000;
        margin-bottom: 10px;
        display: block;
    }
</style>
@if (Model != null && Model.Any())
{
    <div class="banner">
        <div class="container">
            <h5 class="font-weight-bold mb-4">DANH MỤC SẢN PHẨM</h5>
            <div class="b_item mobi_cate" style="display: flex; gap: 10px; flex-wrap: wrap;">
                @foreach (var item in Model)
                {
                    <a href="/danh-muc-san-pham/@item.Alias-@(item.Id)" title="New Arrival" class="item_cate" style=" box-shadow: 0px 0px 5px 0px #b9b3b3; border-radius: 10px; text-align: center;">
                        <div class="b_img" style="width: 250px; border-radius: 20px; margin: auto; display: block;">
                            <span class="bg_fade">
                                <img class="img" alt="New Arrival" src="@item.Icon" style="width:250px;height:150px;">
                            </span>
                        </div>
                        <span class="tit" style=" font-size: 16px; line-height: 20px; color: #000; margin-bottom: 10px; display: block;">@item.Title</span>
                    </a>    
                    }                        
            </div>
        </div>
   </div>
}

