@using WebShoeShop.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<style>
    body {
        background-color: #f5f7fa;
    }

    .form-container {
        max-width: 500px;
        margin: 0 auto;
        background-color: #ffffff;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        margin-top:160px;
    }

    .form-title {
        text-align: center;
        font-size: 24px;
        margin-bottom: 20px;
        font-weight:bold;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: bold;
    }

    .submit-button {
        text-align: center;
    }

    .error-message {
        color: #ff0000;
        margin-top: 5px;
    }
</style>

<div class="form-container">
    <h2 class="form-title">Đăng nhập</h2>

    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label class="form-label">Tên đăng nhập</label>
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="form-label">Mật khẩu</label>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="checkbox">
                @Html.CheckBoxFor(m => m.RememberMe)
                <label class="form-label">Ghi nhớ mật khẩu</label>
                <label>
                    @Html.ActionLink("Quên mật khẩu?", "ForgotPassword")
                </label>
            </div>
        </div>

        <div class="submit-button">
            <input type="submit" value="Đăng nhập" class="btn btn-success" />
        </div>

        <div class="form-group">
            <label class="form-label">Bạn chưa có tài khoản?</label>
            <label>
                @Html.ActionLink("Đăng kí", "Register")
            </label>
        </div>

        if (!ViewData.ModelState.IsValid)
        {
            <div class="error-message">
                Đăng nhập không thành công. Vui lòng kiểm tra lại thông tin đăng nhập.
            </div>
        }
    }
    @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}