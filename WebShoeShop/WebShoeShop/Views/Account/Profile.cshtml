@model WebShoeShop.Models.CreateAccountViewModel
@{
    ViewBag.Title = "Profile";

}
<style>
    .product_section_container {
        margin-top: 180px;
    }

    .row-item-new {
        margin-bottom: 20px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<link href="~/Content/assets/styles/main_styles.css" rel="stylesheet" />
<div class="container product_section_container">
    <div class="row">
        @using (Html.BeginForm("PostProfile", "Account"))
        {
            @Html.ValidationSummary(false)
            @Html.AntiForgeryToken()
            <div class="col-md-12">
                <h2>Thông tin cá nhân</h2>
                <div class="form-group">
                    <label for="exampleInputEmail">Full Name</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="FullName" value="@Model.FullName">

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail">User Name</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="UserName" value="@Model.UserName" readonly>

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail">Phone</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="Phone" value="@Model.Phone">

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail">Email</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="Email" value="@Model.Email" readonly>

                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Cập nhật</button>
                </div>
            </div>
        }
    <div class="col-md-12">
        @Html.Action("HistoryOrder", "Account")
    </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
