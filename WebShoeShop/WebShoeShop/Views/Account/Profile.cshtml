@model WebShoeShop.Models.CreateAccountViewModel
@{
    ViewBag.Title = "Thông tin cá nhân";

}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/Login.css">
<div class="container contact_container">
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->
            <h1 class="text-center" style="margin-top:30px; color: #ffffff;">@ViewBag.Title</h1>
        </div>
    </div>

    <div class="row">
        <div class="root">
            <div class="main">
                <div class="container1 b-container">

                    @using (Html.BeginForm("PostProfile", "Account"))
                    {
                        @Html.ValidationSummary(false)
                        @Html.AntiForgeryToken()
                        <div class="form1">

                            <h2 class="form_title title">Thông tin cá nhân</h2>
                            <span class="form__span">Thông tin tài khoản của bạn</span>

                            <div class="form-group">
                                <span style="display: block; font-weight: bold; margin-right: 280px;">
                                    Tên đầy đủ:
                                </span>
                                <input class="form__input" type="text" aria-describedby="emailHelp" placeholder="Tên đầy đủ" name="FullName" value="@Model.FullName">
                                <span style="display: block; font-weight: bold; margin-right: 260px;">
                                    Tên đăng nhập:
                                </span>
                                <input class="form__input" type="text" aria-describedby="emailHelp" placeholder="Tên đăng nhập" name="UserName" value="@Model.UserName" readonly>
                                <span style="display: block; font-weight: bold; margin-right: 270px;">
                                    Số điện thoại:
                                </span>
                                <input class="form__input" type="text" aria-describedby="emailHelp" placeholder="Số điện thoại" name="Phone" value="@Model.Phone">
                                <span style="display: block; font-weight: bold; margin-right: 300px;">
                                    Email:
                                </span>
                                <input class="form__input" type="text" aria-describedby="emailHelp" placeholder="Email" name="Email" value="@Model.Email" readonly>

                                <small id="emailHelp" class="form-text text-muted">Thông tin của bạn luôn được chúng tôi bảo mật.</small>
                                <button type="submit" class="form__button button submit">Cập nhật</button>
                            </div>

                        </div>
                    }
                </div>
                <div class="switch1">
                    <div class="switch__circle"></div>
                    <div class="switch__container">
                        <h2 class="switch__title title">Chào mừng bạn tới với Double 2T-2Q!</h2>
                        <p class="switch__description description">Xem lịch sử mua hàng của bạn tại đây</p>
                        @*@Html.Action("HistoryOrder", "Account")*@
                    </div>
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="error-message">
                        Cập nhật thất bại.
                    </div>
                }
            </div>
                    
        </div>
    </div>
    <div class="col-md-12">
        @Html.Action("HistoryOrder", "Account")
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
