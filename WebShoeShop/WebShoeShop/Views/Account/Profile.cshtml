<div class="container contact_container">
    <div class="row">
        <div class="col">

            <!-- Breadcrumbs -->
            <h1 class="text-center" style="margin-top:30px; color: #ffffff;">@ViewBag.Title</h1>
        </div>
    </div>

    <div class="row">
        <div class="root">
            <div class="main1">
                <div class="container1 c-container">
                    <form class="form1" action="@Url.Action("PostProfile", "Account")">
                        @Html.ValidationSummary(false)
                        @Html.AntiForgeryToken()

                        <h2 class="form_title title">Thông tin cá nhân</h2>
                        <span class="form__span">Thông tin tài khoản của bạn</span>

                        <span style="display: block; font-weight: bold; margin-right: 280px;">
                            Tên đầy đủ:
                        </span>
                        <input class="form__input" type="text" aria-describedby="emailHelp" placeholder="Tên đầy đủ" value="@Model.FullName">
                        <span style="display: block; font-weight: bold; margin-right: 260px;">
                            Tên đăng nhập:
                        </span>
                        <input class="form__input" type="text" aria-describedby="emailHelp" placeholder="Tên đăng nhập" value="@Model.UserName" readonly>
                        <span style="display: block; font-weight: bold; margin-right: 270px;">
                            Số điện thoại:
                        </span>
                        <input class="form__input" type="text" aria-describedby="emailHelp" placeholder="Số điện thoại" value="@Model.Phone">
                        <span style="display: block; font-weight: bold; margin-right: 300px;">
                            Email:
                        </span>
                        <input class="form__input" type="text" aria-describedby="emailHelp" placeholder="Email" value="@Model.Email" readonly>

                        <small id="emailHelp" class="form-text text-muted">Thông tin của bạn luôn được chúng tôi bảo mật.</small>
                        <button type="submit" class="form__button button submit">Cập nhật</button>
                    </form>
                </div>
            </div>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="error-message">
                    Cập nhật thất bại.
                </div>
            }
        </div>
    </div>
    <div class="col-md-12">
        @Html.Action("HistoryOrder", "Account")
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
