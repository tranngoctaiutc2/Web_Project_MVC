@model WebShoeShop.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">

<style>
    body {
        background-color: #f5f7fa;
    }

    .form-container {
        max-width: 500px;
        margin: 0 auto;
        background-color: #ffffff;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        margin-top:160px;
    }

    .form-title {
        text-align: center;
        font-size: 24px;
        margin-bottom: 20px;
        font-weight: bold;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        font-weight: bold;
    }

    .submit-button {
        text-align: center;
    }
</style>

<div class="form-container">
    <h2 class="form-title"><i class="fa fa-user-plus"></i> Tạo tài khoản mới</h2>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label for="FullName" class="form-label">Họ tên</label>
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", id = "FullName" })
             @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="UserName" class="form-label">Tên đăng nhập</label>
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", id = "UserName" })
            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="Email" class="form-label">Email</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "Email" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="Password" class="form-label">Mật khẩu</label>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "Password" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="ConfirmPassword" class="form-label">Xác nhận mật khẩu</label>
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", id = "ConfirmPassword" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
        </div>

        <div class="submit-button">
            <button type="submit" class="btn btn-success">Đăng ký</button>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
