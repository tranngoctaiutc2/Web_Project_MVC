@using Microsoft.AspNet.Identity.EntityFramework
@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "Danh sách Quyền";
}

<!-- Thêm vào phần head hoặc cuối file layout của bạn -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/category" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách Quyền</h3>

            <div class="card-tools">
                <a href="/admin/role/create" class="btn btn-success">Thêm mới</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@item.Name</td>
                                <td>
                                    <a href="/admin/role/edit/@item.Id" class="btn btn-sm btn-primary">
                                        <i class="fa fa-pen-square"></i>
                                    </a>

                                    <!-- Nút xóa với SweetAlert2 -->
                                    <button type="button" class="btn btn-sm btn-danger" onclick="confirmDelete('@item.Id')">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>

            </table>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
<script type="text/javascript">
    function confirmDelete(roleId) {
        // Hiển thị SweetAlert2 với thông báo xác nhận xóa
        Swal.fire({
            title: 'Bạn có chắc chắn muốn xóa quyền này?',
            text: "Hành động này không thể hoàn tác!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Có',
            cancelButtonText: 'Hủy bỏ'
        }).then((result) => {
            if (result.isConfirmed) {
                // Nếu xác nhận xóa, submit form bằng AJAX hoặc điều hướng đến action xóa
                deleteRole(roleId);
            }
        })
    }

    function deleteRole(roleId) {
        $.ajax({
            url: '/admin/role/delete/' + roleId,
            type: 'POST',
            data: {
                __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
            },
            success: function (response) {
                Swal.fire(
                    'Đã xóa!',
                    'Quyền đã được xóa thành công.',
                    'success'
                ).then(() => {
                    location.reload(); // Tải lại trang sau khi xóa
                });
            },
            error: function () {
                Swal.fire(
                    'Lỗi!',
                    'Đã xảy ra lỗi khi xóa quyền.',
                    'error'
                );
            }
        });
    }
</script>

