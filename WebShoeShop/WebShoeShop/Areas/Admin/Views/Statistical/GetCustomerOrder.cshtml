@{ 
    int i = 1;
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title" style="font-weight:600;">Top các khách hàng mua hàng nhiều nhất</h3>

                <div class="card-tools">
                    

                        @using (Html.BeginForm("GetCustomerOrder", "Statistical", FormMethod.Get, new { }))
                        {
                            <div class="input-group input-group-sm">
                                <input type="text" name="Searchtext" class="form-control" placeholder="Nhập tên khách hàng">
                                <span class="input-group-append">
                                    <button type="submit" class="btn btn-info btn-flat">Tìm kiếm</button>
                                </span>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0" style="height: 500px;">
                <table class="table table-head-fixed text-nowrap">
                    <thead>
                        <tr>
                            <th>Stt</th>
                            <th>Tên khách hàng</th>
                            <th>Email</th>
                            <th>Sđt</th>
                            <th>Số đơn hàng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@customer.CustomerName</td>
                                <td>@customer.Email</td>
                                <td>@customer.Phone</td>
                                <td>@customer.OrderCount</td>
                            </tr>
                            i++;
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>